<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Addr 1</th>
      <th>Addr 2</th>
      <th>Addr city</th>
      <th>Addr code</th>
      <th>Addr state</th>
      <th>Addr country</th>
      <th>Phone 1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.desc %></td>
        <td><%= restaurant.addr_1 %></td>
        <td><%= restaurant.addr_2 %></td>
        <td><%= restaurant.addr_city %></td>
        <td><%= restaurant.addr_code %></td>
        <td><%= restaurant.addr_state %></td>
        <td><%= restaurant.addr_country %></td>
        <td><%= restaurant.phone_1 %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

